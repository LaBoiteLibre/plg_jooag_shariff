<?xml version="1.0" encoding="utf-8"?>
<extension version="3.3" type="plugin" method="upgrade" group="system">
	<name>plg_jooag_shariff</name>
	<author>Ufuk Avcu</author>
	<creationDate>13.11.2014</creationDate>
	<copyright>Copyright (C) 2009 - 2015 Joomla Agency. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@joomla-agentur.de</authorEmail>
	<authorUrl>www.joomla-agentur.de</authorUrl>
	<version>3.x.0 Alpha</version>
	<description>PLG_JOOAG_SHARIFF_XML_DESCRIPTION</description>

	<files>
		<folder>assets</folder>
		<folder>backend</folder>
		<folder>fields</folder>
		<folder>language</folder>
		<filename plugin="jooag_shariff">jooag_shariff.php</filename>
		<filename plugin="jooag_shariff">README.md</filename>
	</files>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_jooag_shariff.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_jooag_shariff.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/plugins/system/jooag_shariff/fields">
				<field type="spacer" name="icons" label="&lt;h2&gt;PLG_JOOAG_SHARIFF_SPACER_ICONS&lt;/h2&gt;" />
				<field name="data-services" label="Services" multiple="true" type="list" default="">
					<option value="Twitter">Twitter</option>
					<option value="Facebook">Facebook</option>
					<option value="GooglePlus">Google+</option>
					<option value="LinkedIn">LinkedIn</option>
					<option value="Pinterest">Pinterest</option>
					<option value="Xing">Xing</option>
					<option value="whatsapp">Whatsapp</option>
					<option value="mail">Mail</option>
					<option value="info">Info</option>
					</field>
				<field name="data-info-url" type="modal_article" default="" label="Info Button Article" description="You can choose a info page for your visitors" />
				<field name="data-mail-url" type="input" default="" label="Mail" description="You can choose a info page for your visitors" />
				<field type="spacer" name="style" label="&lt;h2&gt;Style&lt;/h2&gt;" />
				<field name="position" label="Position" type="radio" class="btn-group" default="1" description="Select the position from the social buttons.">
					<option value="1">Content Top</option>
					<option value="2">Content Bottom</option>
					<option value="3">Only in Module</option>
					</field>
				<field type="spacer" name="myspacer" showon="position:3" label="&lt;b&gt;Attention:&lt;/b&gt; Add a new Custom Module and use {shariff} in the Editor field ans set the Modul Option 'Content Prepare' to yes!&lt;/br&gt;&lt;b&gt;Attention:&lt;/b&gt; If you use the &lt;i&gt;Only in Module&lt;/i&gt; Mode, then the Restriction Settings has no effect." />
				<field name="data-orientation" label="Orienation" type="radio" class="btn-group" default="default" description="Select the orienatation!">
					<option value="horizontal">Horizontal</option>
					<option value="vertical">Vertical</option>
					</field>
				<field name="data-theme" label="Theme" type="radio" class="btn-group" default="standard" description="Select a theme!">
					<option value="color">Color</option>
					<option value="grey">Grey</option>
					<option value="white">White</option>
					</field>
				<field type="spacer" name="Restriction" label="&lt;h2&gt;Restriction&lt;/h2&gt;" />
				<field name="wheretoshow" label="Show" type="list" class="btn-group" default="1" >
					<option value="1">Everywhere</option>
					<option value="2">Show by Category or Menu Item</option>
					<option value="3">Hide by Category or Menu Item</option>
					</field>
				<field type="spacer" name="selectedareas" showon="wheretoshow:2,3" label="Please use the fields below to show the Shariff Plugin on selected areas!" />
				<field name="showbycategory" type="category" multiple="true" extension="com_content" label="Categories" description="If one or more categories are selected, the buttons appear only in this categories!" />
				<field name="showbymenu" type="menuitem" multiple="true" label="Menu Items" />
				<field type="spacer" name="forexperts" label="&lt;h2&gt;For Experts&lt;/h2&gt;" />
				<field name="cache" type="text" default="60" label="Caching Time in seconds" description="" filter="integer" />
				<field name="shariffcss" type="filelist" default="shariff.complete.css" label="Shariff CSS" description="" directory="plugins/system/jooag_shariff/assets/css" filter="css" />
				<field name="shariffjs" type="filelist" default="shariff.complete.js" label="Shariff JS" description="" directory="plugins/system/jooag_shariff/assets/js" filter="js" />
				<field name="data-backend-url" label="Share Counter" type="radio" class="btn-group" default="1" description="">
					<option value="0">Disabled</option>
					<option value="1">Enabled</option>
					</field>
			</fieldset>
		</fields>
	</config>
</extension>
